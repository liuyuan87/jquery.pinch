!!!5
%html.no-js
  %head
    %title Kivra Web
    %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
    %meta{:name => "apple-mobile-web-app-status-bar-style", :content => "black"}
    %meta{:charset => "UTF-8"}
    %meta{:"http-equiv" => "Content-Type", :content => "text/html; charset=UTF-8"}
    %meta{:name => "google", :value => "notranslate"}
    %meta{:"http-equiv" => "Content-Language", :content => "sv"}
    %meta{:name => "format-detection", :content => "telephone=no"}
    %meta{:name => "viewport", :content => "user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, target-densitydpi=device-dpi"}
    %link{:rel => "apple-touch-icon-precomposed", :href => "icons/54.png"}
    %link{:rel => "apple-touch-icon-precomposed", :sizes => "72x72", :href => "icons/72.png"}
    %link{:rel => "apple-touch-icon-precomposed", :sizes => "114x114", :href => "icons/114.png"}
    %link{:rel => "apple-touch-icon-precomposed", :sizes => "144x144", :href => "icons/144.png"}
    %link{:rel => "stylesheet", :href => "http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/hammer.js/1.0.5/hammer.min.js"}
    %script{:src => "js/jquery.hammer.js"}
    %script{:src => "js/jquery.pinch.js"}
    %script{:src => "js/script.js"}
  %body
    :css
      .pinch {
        overflow: hidden;
        background-color: #eee;
        margin-bottom: 10px;
      }
    .container
      .row
        .span12
          %h1 $(this).pinch(event)
          - 3.times do
            .pinch
              .media.text-center.pinch-inner
                %img.img{:src => "http://placekitten.com/g/512"}